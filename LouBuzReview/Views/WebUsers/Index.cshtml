@model IEnumerable<LouBuzReview.Models.WebUser>

@{
    ViewBag.Title = "Reviewer Information";
}


<div>
    <table>
        <tr>
            <td style="width: 100%"><h2>Registered User Information</h2></td>
            @* Adding user information link is working but taken out since you can add user info in Website review page *@
            @*<td align="right" style="width: 100%"> <a href="@Url.Action("Create", "Websites")" class="btn btn-success" title="Add a new website for review">Add New User</a></td>*@
        </tr>
    </table>
</div>
<br />
@* 
    You can sort data on this page by clicking on the field name
*@
<div class="bg-primary">
    <table class="table">
        <tr class="btn-success">
            <th>
                @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.NameSortParmFN })
            </th>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParmLN })
            </th>
            <th>
                @Html.ActionLink("City", "Index", new { sortOrder = ViewBag.NameSortParmCity })
            </th>
            <th>
                @Html.ActionLink("State", "Index", new { sortOrder = ViewBag.NameSortParmState })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id=item.UserID })" class="btn btn-warning " title="Edit this profile"><span class="glyphicon"></span>Edit</a>
                    <a href="@Url.Action("Details", new { id=item.UserID })" class="btn btn-success " title="View more details on this profile"><span class="glyphicon"></span>Details</a>
                    <a href="@Url.Action("Delete", new { id=item.UserID })" class="btn btn-danger " title="Delete this profile"><span class="glyphicon"></span>Delete</a>
                </td>
            </tr>
        }

    </table>
</div>